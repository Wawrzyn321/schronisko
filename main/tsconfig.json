{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "jsx": "preserve",
    "lib": ["es2021"],
    "paths": {
      "prisma-connect/*": ["./src/server/prisma-connect/*"],
      "img-fs": ["./src/server/img-fs"],
      "domain": ["./src/server/domain"],
    },
    "skipLibCheck": true
  },
  "include": ["src/server/**/*", "src/main/**/*"]
}
